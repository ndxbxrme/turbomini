{
  "name": "turbomini-workspace",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/*/*",
    "templates/*"
  ],
  "scripts": {
    "build": "npm run build:types --workspace turbomini",
    "build:types": "npm run build:types --workspace turbomini",
    "examples": "python -m http.server 8055",
    "format": "npx prettier -w .",
    "lint": "node scripts/lint.mjs",
    "test": "npm run test --workspace turbomini && npm run test --workspace @turbomini/cli && npm run test --workspace @turbomini/wc-tests",
    "examples:check": "node scripts/examples-check.mjs",
    "docs:check": "node scripts/docs-check.mjs",
    "docs:prepare": "node scripts/docs-sync-examples.mjs",
    "examples:screenshots": "node scripts/examples-screenshots.mjs",
    "examples:screenshots:check": "node scripts/examples-screenshots.mjs --check",
    "runtime:sync": "node scripts/sync-runtime.mjs",
    "runtime:check": "node scripts/sync-runtime.mjs --check",
    "test:e2e": "npx playwright test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.57.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "jsdom": "^22.1.0",
    "playwright": "^1.57.0",
    "prettier": "^3.6.2",
    "tsc": "^2.0.4",
    "typescript": "^5.9.2"
  }
}
