{
  "tag": "tm-dialog",
  "title": "Dialog",
  "package": "@turbomini/wc-dialog",
  "description": "Modal and non-modal dialog with focus trapping and overlay.",
  "recipes": {
    "copy": { "path": "recipes/copy" },
    "wc": { "package": "@turbomini/wc-dialog", "version": "^0.1.0" }
  },
  "props": [
    { "name": "open", "type": "boolean", "default": false },
    { "name": "modal", "type": "boolean", "default": true },
    { "name": "closable", "type": "boolean", "default": true },
    { "name": "initialFocus", "type": "string", "default": null }
  ],
  "methods": ["show()", "close()"],
  "events": [
    { "name": "tm-open", "detail": "{ modal: boolean }" },
    { "name": "tm-close", "detail": "{ reason: 'close-button' | 'overlay' | 'escape' | 'method' }" }
  ],
  "tokens": [
    "--tm-dialog-bg",
    "--tm-dialog-fg",
    "--tm-dialog-radius",
    "--tm-dialog-shadow",
    "--tm-dialog-pad",
    "--tm-overlay-bg"
  ],
  "parts": ["overlay", "content", "title", "body", "footer", "close"],
  "docs": {
    "readme": "./README.md",
    "events": "../../../docs/web-components/events.md"
  }
}
